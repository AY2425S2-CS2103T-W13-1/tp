<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.stage.*?>
<?import javafx.scene.web.WebView?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17.0.2-ea"
         xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <VBox fx:id="helpMessageContainer" alignment="TOP_LEFT" prefHeight="394.0" prefWidth="728.0" spacing="10.0">
        <children>
          <HBox alignment="CENTER_LEFT">
            <children>
              <Label fx:id="helpMessage" text="Label">
                <HBox.margin>
                  <Insets right="5.0" />
                </HBox.margin>
              </Label>
              <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
                <HBox.margin>
                  <Insets left="5.0" />
                </HBox.margin>
              </Button>
            </children>
          </HBox>
          <Label fx:id="noInternetMessage" text="No internet? No worries, you can refer to the user guide here:" />
          <WebView fx:id="localGuideWebView" prefHeight="600" prefWidth="600" />
        </children>
        <opaqueInsets>
          <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
        </opaqueInsets>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
      </VBox>
    </Scene>
  </scene>
</fx:root>
